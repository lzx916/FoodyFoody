/* pages/homelzx/homelzx.wxss */
.swiper {
  width: 100%;
  height: auto;
  aspect-ratio: 1.5 / 1;
}

swiper-item image {
  width: 100%;
  height: 100%;
}
.menu {
  display: flex;
  flex-direction: row; /* 将按钮水平排列 */
  justify-content: space-around;
  margin-bottom: 20rpx;
  align-items: center; /* 垂直居中按钮 */
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 130rpx;
  margin: 0 5rpx;
}

.menu-icon {
  width: 70rpx;
  height: 70rpx;
  margin-top: 10px;
  object-fit: contain;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.food-list {
  display: flex;
  flex-direction: column;
}

.food-list-title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 10px;
}

.food-list-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-left: 5px;
  padding-right: 5px;
}
.food-item {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
  width: 49%;
  height: 300rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  overflow: hidden;
}
.food-item image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}
.food-name {
  padding: 10rpx;
  font-size: 26rpx;
  text-align: center;
}

.food-describe {
  font-size: 26rpx;
  overflow: hidden;
  padding-left: 5px;
  padding-bottom: 5px;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user-like-container {
  width: 750rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.user-info {
  width: 80%;
  display: flex;
  flex-direction: row;
}

.user-avatar {
  width: 10%;
  height: 100%;
  margin-right: 17rpx;
}

.user-nickname {
  width: 90%;
  height: 100%;
  font-size: 24rpx;
  color: #999999;
}

