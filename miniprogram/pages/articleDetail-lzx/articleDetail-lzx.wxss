page {
  background-color: white;
}
.detail-container {
  padding: 20rpx;
}

/* 轮播图样式 */
.swiper {
  height: 600rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 美食名字和描述样式 */
.title-container {
  margin-top: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

/* 用户评论样式 */
.comment-container {
  width: 718rpx;
  margin-top: 39rpx;
  padding-left: 15rpx;
}

.total {
  font-size: 24rpx;
  color: #999999;
  margin-left: 1rpx;
}

