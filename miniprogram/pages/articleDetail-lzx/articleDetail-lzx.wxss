.container-place {
  font-size: 24rpx;
  color: #999999;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.comment {
  display: flex;
  margin-bottom: 34rpx;
  align-items: flex-start;
}

.comment-user-avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 17rpx;
}

.comment-right {
  display: inline-block;
  width: 636rpx;
  border-bottom: 2rpx solid #E5E5E5;
  padding-bottom: 40rpx;
}

.comment-user-name {
  font-size: 24rpx;
  color: #999999;
}

.comment-content {
  width: 603rpx;
  margin-top: 20rpx;
}

.comment-content-text {
  font-size: 26rpx;
  color: #333333;
}

.comment-content-time {
  font-size: 24rpx;
  color: #CCCCCC;
  margin-left: 30rpx;
}

.end {
  font-size: 32rpx;
  color: #ccc;
  text-align: center;
  height: 150rpx;
}

.comment-box {
  left: 0px;
  /* border: 1px solid olive; */
  position: fixed;
  bottom: 0px;
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: #fff;
  /* flex: 1; */
}

.comment-input {
  flex: 1;
  height: 60rpx;
  width: 450rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 45rpx;
  font-size: 28rpx;
  margin-left: 5rpx;
}

.comment-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #FFC125;
  color: #fff;
  border-radius: 45rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.comment-count, .like-count {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #999;
}