/* pages/placeDetail/placeDetail.wxss */
.container {
  /* text-align: center; */
}

.shop-container {
  max-width: 720rpx;
  margin: 0 auto;
  background-color: white;
  box-shadow: 0rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  padding: 10rpx;
}

.shop-image {
  margin-top: 5rpx;
  width: 100%;
  height: 600rpx;
  object-fit: cover;
  border-radius: 20rpx;
}

.shop-details {
  padding: 15rpx;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.shop-category, .shop-business-hours {
  font-size: 28rpx;
  margin-bottom: 8rpx;
  color: #085480;
}

.shop-description {
  font-size: 30rpx;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.shop-address {
  font-size: 26rpx;
  color: #999999;
  margin-top: 16rpx;
}